<html lang="en">
  <head>
    <link rel="stylesheet" type="text/css" href="./../bootstrap.css">
  </head>
   <body>
    <ul class="list-group-item col-lg-offset-4 col-md-offset-4 col-sm-offset-4 col-xs-offset-4 col-lg-4 col-md-4 col-sm-4 col-xs-4">
      <form class="inline">
        {{> adminForm }}
        <br>
        <label>Username:</label>
        <input type="text" name="username" class="form-control" value="{{username}}">
        <br>
        <input type="submit" id="search-btn" value="Search" class='btn btn-default pull-right'>
      </form>
    </ul>
    <h2 class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">Approve Credit Transfers</h2>
    <table id="users-table" class="table table-hover table-bordered">
      <tr>
        <th>User</th>
        <th>Credits</th>
        {{#if permissions.can_approve_credits}}
          <th>Approve</th>
        {{/if}}
      </tr>
      {{#each transfers}}
        <tr class="gen-tr">
          <td>{{username}}</td>
          <td class="text-right">{{credits_received}}</td>
          {{#if ../permissions.can_approve_credits}}
            <td><a href="#" id="approve-{{id}}" onclick="approve('{{id}}')">Approve transfer</a></td>
          {{/if}}
        </tr>
      {{/each}}
    </table>
    <nav aria-label="Page navigation example" class="col-lg-offset-5 col-md-offset-5 col-sm-offset-5 col-xs-offset-5">
      <ul class="pagination">
        <li class="page-item"><a class="page-link" href="/admin/approve?page={{prevPage}}&username={{username}}">Previous Page</a></li>
        <li class="page-item"><a class="page-link" href="/admin/approve?page={{nextPage}}&username={{username}}">Next Page</a></li>
      </ul>
    </nav>
  </body>
</html>

<script type="text/javascript">
  document.getElementById('select-approve').setAttribute('selected', 'selected');

  async function approve (id) {
    const response = await fetch('/admin/approve', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json'
      },
      body: JSON.stringify({ id })
    });

    const data = await response.json();

    if (data.isApproveSuccessful) {
      const link = document.getElementById(`approve-${id}`);
      link.setAttribute('style', 'color: green');
      link.setAttribute('href', 'javascript: void(0)');
      link.innerHTML = 'Approved';
    }
  }
</script>
