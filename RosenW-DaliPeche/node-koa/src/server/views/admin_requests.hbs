<html lang="en">
  <head>
    <link rel="stylesheet" type="text/css" href="./../bootstrap.css">
    <link rel="stylesheet" type="text/css" href="./../sidebar.css">
    <link rel="stylesheet" type="text/css" href="./../navbar.css">
  </head>
   <body>
    {{> navBar }}
    {{> adminMenu }}
    <ul class="list-group-item col-lg-9">
      <form class="inline">
        <div style="height: 20.8em">
          <br>
          <label class="col-lg-12">IATA Code / City:</label>
          <div class="col-lg-12">
            <input type="text" name="term" class="form-control" value="{{username}}">
          </div>
        </div>
        <div>
          <div class="col-lg-6">
            <input type="submit" id="export-btn" value="Export" class='form-control btn-info'>
          </div>
          <div class="col-lg-6">
            <input type="submit" id="search-btn" value="Search" class='form-control btn-success'>
          </div>
        </div>
      </form>
    </ul>
    <h2 class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">Report</h2>
    <table id="users-table" class="table table-hover table-bordered">
      <tr>
        <th>Request</th>
        <th>Type</th>
        <th>Call Count</th>
      </tr>
      {{#each requests}}
        <tr class="gen-tr">
          <td>{{request}}</td>
          <td>{{type}}</td>
          <td class="text-right">{{call_count}}</td>
        </tr>
      {{/each}}
    </table>
    <nav aria-label="Page navigation example" class="col-lg-offset-5 col-md-offset-5 col-sm-offset-5 col-xs-offset-5">
      <ul class="pagination">
        <li class="page-item"><a class="page-link" href="/admin/requests?page={{prevPage}}&term={{term}}">Previous Page</a></li>
        <li class="page-item"><a class="page-link" href="/admin/requests?page={{nextPage}}&term={{term}}">Next Page</a></li>
      </ul>
    </nav>
  </body>
</html>

<script type="text/javascript">
  document.getElementById('menu-requests').setAttribute('class', 'selected');
  document.getElementById('select-requests').setAttribute('selected', 'selected');
</script>