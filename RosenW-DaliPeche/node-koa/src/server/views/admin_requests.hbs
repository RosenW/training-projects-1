<html lang="en">
  <head>
    <link rel="stylesheet" type="text/css" href="./../bootstrap.css">
    <link rel="stylesheet" type="text/css" href="./../sidebar.css">
    <link rel="stylesheet" type="text/css" href="./../navbar.css">
    <script type="text/javascript" src="./../utils.js"></script>
  </head>
   <body>
    {{> navBar }}
    {{> adminMenu }}
    <ul class="list-group-item col-lg-9">
      <form class="inline">
        <div style="height: 20.8em">
          <br>
          <label class="col-lg-12">IATA Code / City:</label>
          <div class="col-lg-12">
            <input type="text" name="term" class="form-control" value="{{term}}">
          </div>
        </div>
        <div>
          <div class="col-lg-6">
            <button id="export-btn" class='form-control btn-info' onclick="exportToExcel(event, 'request-table', 'requests', ['Term'], ['{{term}}'])">Export</button>
          </div>
          <div class="col-lg-6">
            <input type="submit" id="search-btn" value="Search" class='form-control btn-success'>
          </div>
        </div>
      </form>
    </ul>
    <h2 class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">Report</h2>
    <table id="request-table" class="table table-hover table-bordered">
      <tr>
        <th>Request</th>
        <th>Type</th>
        <th>Call Count</th>
      </tr>
      {{#each requests}}
        <tr class="gen-tr">
          <td>{{request}}</td>
          <td>{{type}}</td>
          <td class="text-right">{{call_count}}</td>
        </tr>
      {{/each}}
    </table>
  </body>
</html>

<script type="text/javascript">
  document.getElementById('menu-requests').setAttribute('class', 'selected');
</script>