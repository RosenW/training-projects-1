<html lang="en">
  <head>
    <link rel="stylesheet" type="text/css" href="./../bootstrap.css">
    <link rel="stylesheet" type="text/css" href="./../sidebar.css">
    <link rel="stylesheet" type="text/css" href="./../navbar.css">
    <script type="text/javascript" src="./../utils.js"></script>
  </head>
   <body>
    {{> navBar }}
    {{> adminMenu }}
    <ul class="list-group-item col-lg-9">
      <form class="inline">
        <div style="height: 20.8em">
          <label class="col-lg-12">City Name:</label>
          <div class="col-lg-12">
            <input type="text" name="name" class="form-control" value="{{name}}">
          </div>
          <label class="col-lg-12">Country:</label>
          <div class="col-lg-12">
            <input type="text" name="country" class="form-control" value="{{country}}">
          </div>
        </div>
        <div>
          <div class="col-lg-6">
            <button id="export-btn" class='form-control btn-info' onclick="exportToExcel(event, 'cities-table', 'cities', ['Name', 'Country'], ['{{name}}', '{{country}}'])">Export</button>
          </div>
          <div class="col-lg-6">
            <input type="submit" id="search-btn" value="Search" class='form-control btn-success'>
          </div>
        </div>
      </form>
    </ul>
    <h2 class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">Cities</h2>
    <table id="cities-table" class="table table-hover table-bordered">
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Country</th>
        <th>Longitude</th>
        <th>Latitude</th>
        <th>Observed at</th>
      </tr>
      {{#each cities}}
        <tr class="gen-tr">
          <td class="text-right">{{id}}</td>
          <td>{{name}}</td>
          <td>{{country}}</td>
          <td class="text-right">{{lng}}</td>
          <td class="text-right">{{lat}}</td>
          <td>{{observed_at}}</td>
        </tr>
      {{/each}}
    </table>
  </body>
</html>

<script type="text/javascript">
  document.getElementById('menu-cities').setAttribute('class', 'selected');
</script>