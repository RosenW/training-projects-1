<html lang="en">
  <head>
    <link rel="stylesheet" type="text/css" href="./../bootstrap.css">
  </head>
   <body>
    <ul class="list-group-item col-lg-offset-4 col-md-offset-4 col-sm-offset-4 col-xs-offset-4 col-lg-4 col-md-4 col-sm-4 col-xs-4">
      <form class="inline">
        {{> adminForm }}
        <br>
        <label>City Name:</label>
        <input type="text" name="name" class="form-control" value="{{name}}">
        <label>Country Code:</label>
        <input type="text" name="country-code" class="form-control" value="{{countryCode}}">
        <br>
        <input type="submit" id="search-btn" value="Search" class='btn btn-default pull-right'>
      </form>
    </ul>
    <h2 class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">Cities</h2>
    <table id="users-table" class="table table-hover">
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Country Code</th>
        <th>Longitude</th>
        <th>Latitude</th>
        <th>Observed at</th>
      </tr>
      {{#each cities}}
        <tr class="gen-tr">
          <td class="text-right">{{id}}</td>
          <td>{{name}}</td>
          <td>{{country_code}}</td>
          <td class="text-right">{{lng}}</td>
          <td class="text-right">{{lat}}</td>
          <td>{{observed_at}}</td>
        </tr>
      {{/each}}
    </table>
    <nav aria-label="Page navigation example" class="col-lg-offset-5 col-md-offset-5 col-sm-offset-5 col-xs-offset-5">
      <ul class="pagination">
        <li class="page-item"><a class="page-link" href="/admin/cities?page={{prevPage}}&name={{name}}&country-code={{countryCode}}">Previous Page</a></li>
        <li class="page-item"><a class="page-link" href="/admin/cities?page={{nextPage}}&name={{name}}&country-code={{countryCode}}">Next Page</a></li>
      </ul>
    </nav>
  </body>
</html>

<script type="text/javascript">
  document.getElementById('select-cities').setAttribute('selected', 'selected');
</script>