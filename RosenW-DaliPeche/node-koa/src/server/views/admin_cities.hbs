<html lang="en">
  <head>
    <link rel="stylesheet" type="text/css" href="./../bootstrap.css">
    <link rel="stylesheet" type="text/css" href="./../sidebar.css">
    <link rel="stylesheet" type="text/css" href="./../navbar.css">
  </head>
   <body>
    {{> navBar }}
    {{> adminMenu }}
    <ul class="list-group-item col-lg-9">
      <form class="inline">
        <div style="height: 20.8em">
          <label class="col-lg-12">City Name:</label>
          <div class="col-lg-12">
            <input type="text" name="name" class="form-control" value="{{name}}">
          </div>
          <label class="col-lg-12">Country:</label>
          <div class="col-lg-12">
            <input type="text" name="country-code" class="form-control" value="{{countryCode}}">
          </div>
        </div>
        <div>
          <div class="col-lg-6">
            <input type="submit" id="export-btn" value="Export" class='form-control btn-info'>
          </div>
          <div class="col-lg-6">
            <input type="submit" id="search-btn" value="Search" class='form-control btn-success'>
          </div>
        </div>
      </form>
    </ul>
    <h2 class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">Cities</h2>
    <table id="users-table" class="table table-hover table-bordered">
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Country</th>
        <th>Longitude</th>
        <th>Latitude</th>
        <th>Observed at</th>
      </tr>
      {{#each cities}}
        <tr class="gen-tr">
          <td class="text-right">{{id}}</td>
          <td>{{name}}</td>
          <td>{{country}}</td>
          <td class="text-right">{{lng}}</td>
          <td class="text-right">{{lat}}</td>
          <td>{{observed_at}}</td>
        </tr>
      {{/each}}
    </table>
    <nav aria-label="Page navigation example" class="col-lg-offset-5 col-md-offset-5 col-sm-offset-5 col-xs-offset-5">
      <ul class="pagination">
        <li class="page-item"><a class="page-link" href="/admin/cities?page={{prevPage}}&name={{name}}&country-code={{countryCode}}">Previous Page</a></li>
        <li class="page-item"><a class="page-link" href="/admin/cities?page={{nextPage}}&name={{name}}&country-code={{countryCode}}">Next Page</a></li>
      </ul>
    </nav>
  </body>
</html>

<script type="text/javascript">
  document.getElementById('menu-cities').setAttribute('class', 'selected');
  document.getElementById('select-cities').setAttribute('selected', 'selected');
</script>