<html lang="en">
  <head>
    <link rel="stylesheet" type="text/css" href="./../bootstrap.css">
  </head>
   <body>
    {{> adminForm }}
    <h2 class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">Credit Balance</h2>
    <table id="users-table" class="table table-hover">
      <tr>
        <th>User</th>
        <th>Credits Purchased</th>
        <th>Credits Spent</th>
        <th>Credits Remaining</th>
      </tr>
      {{#each users}}
        <tr class="gen-tr">
          <td>{{username}}</td>
          <td>{{credits_purchased}}</td>
          <td>{{credits_spent}}</td>
          <td>{{credits_remaining}}</td>
        </tr>
      {{/each}}
      <tr>
        <td>Total</td>
        <td>{{total_credits_purchased}}</td>
        <td>{{total_credits_spent}}</td>
        <td>{{total_credits_remaining}}</td>
      </tr>
    </table>
  </body>
</html>