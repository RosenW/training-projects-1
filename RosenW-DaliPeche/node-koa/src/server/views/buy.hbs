<html lang="en">
  <head>
    <link rel="stylesheet" type="text/css" href="./bootstrap.css">
  </head>
   <body>
    <h2 class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">Buy Credits</h2>
    <ul class="list-group-item col-lg-offset-4 col-md-offset-4 col-sm-offset-4 col-xs-offset-4 col-lg-4 col-md-4 col-sm-4 col-xs-4">
      <form method="post">
        <input type="number" name="credits" id='credit-box' placeholder="Enter credits" class="form-control">
        <br>
        <p id="success-msg" hidden="true" class="text-success">Successfuly added credits</p>
        <p id="credits-not-number-error-msg" hidden="true" class="text-danger">Credits must be a positive whole number</p>
        <p id="max-credits-error-msg" hidden="true" class="text-danger">Maximum credits allowed is 1000000 per user</p>
        <input type="submit" id="buy-btn" value="Buy" class='btn btn-default pull-right'>
        <a href="home" class='pull-left'>Back</a>
      </form>
    </ul>
  </body>
</html>

<script type="text/javascript">
const successMsg = document.getElementById('success-msg');
const notNumberErrorMsg = document.getElementById('credits-not-number-error-msg');
const maxCreditsErrorMsg = document.getElementById('max-credits-error-msg');

const success = "{{success}}";
const error = "{{error}}";

if (Number(success) === 1) successMsg.removeAttribute('hidden');
if (Number(error) === 1) notNumberErrorMsg.removeAttribute('hidden');
if (Number(error) === 2) maxCreditsErrorMsg.removeAttribute('hidden');
</script>