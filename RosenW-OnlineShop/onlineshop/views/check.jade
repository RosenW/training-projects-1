doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/navbar.css')
    link(rel='stylesheet', href='/stylesheets/table.css')
    script(type='text/javascript' src="/js/jquery.min.js")
    style.
      form, a {
        color: white;
      }
  body
    block content
  include ./backofficenav.jade
ul(id='submenu')
  li
    form(method='post')
      |STATE: 
      select(name='state' value='#{data.state}')
        optgroup
          option(value='4') All
          | &#x9;&#x9;
          option(value='0') Awaiting Delivery
          | &#x9;&#x9;
          option(value='1') Being Delivered
          | &#x9;&#x9;
          option(value='2') Delivered
          | &#x9;&#x9;
          
      | FROM: 
      input(type='textbox', placeholder='dd', name='fromDay' style='width:5%' value="#{data.from.split('-')[0]}")
      | -
      input(type='textbox', placeholder='mm', name='fromMonth' style='width:5%' value="#{data.from.split('-')[1]}")
      | -
      input(type='textbox', placeholder='yyyy', name='fromYear' style='width:5%' value="#{data.from.split('-')[2]}")
      | TO: 
      input(type='textbox', placeholder='dd', name='toDay' style='width:5%' value="#{data.to.split('-')[0]}")
      | -
      input(type='textbox', placeholder='mm', name='toMonth' style='width:5%' value="#{data.to.split('-')[1]}")
      | -
      input(type='textbox', placeholder='yyyy', name='toYear' style='width:5%' value="#{data.to.split('-')[2]}")
      | USER: 
      input(type='textbox', placeholder='user', name='word' value="#{data.word}")
      input(type='submit', value='Filter')
  
div
  table(style='width:60%; display:block' id="maint" class='allpurch')
    tr
      th(width="10%" style="text-align:center")
        if data.sort != 1
          a(href=
            "/check?state=#{data.state}&sort=1&from=#{data.from}&to=#{data.to}&word=#{data.word}")  Date
        else
          a(href=
            "/check?state=#{data.state}&sort=6&from=#{data.from}&to=#{data.to}&word=#{data.word}")  Date
      th(width="15%" style="text-align:center")
        if data.sort != 2
          a(href=
            "/check?state=#{data.state}&sort=2&from=#{data.from}&to=#{data.to}&word=#{data.word}")  User
        else
          a(href=
            "/check?state=#{data.state}&sort=7&from=#{data.from}&to=#{data.to}&word=#{data.word}")  User
      th(width="15%" style="text-align:center") 
        if data.sort != 3
          a(href=
            "/check?state=#{data.state}&sort=3&from=#{data.from}&to=#{data.to}&word=#{data.word}")  Address
        else
          a(href=
            "/check?state=#{data.state}&sort=8&from=#{data.from}&to=#{data.to}&word=#{data.word}")  Address
      th(width="15%" style="text-align:center")  
        if data.sort != 4
          a(href=
            "/check?state=#{data.state}&sort=4&from=#{data.from}&to=#{data.to}&word=#{data.word}")  State
        else 
          a(href=
            "/check?state=#{data.state}&sort=9&from=#{data.from}&to=#{data.to}&word=#{data.word}")  State
      th(width="15%" style="text-align:center")  
        if data.sort != 5
          a(href=
            "/check?state=#{data.state}&sort=5&from=#{data.from}&to=#{data.to}&word=#{data.word}")  Total
        else 
          a(href=
            "/check?state=#{data.state}&sort=10&from=#{data.from}&to=#{data.to}&word=#{data.word}")  Total
      th(width="7%")
    each item in data.purchases
        tr
          td(style="text-align:center")  #{item.date}
          td(style="text-align:left")  #{item.first_name + " " + item.last_name}
          td(style="text-align:left")  #{item.address}
          td(style="text-align:center")  #{item.state}
          td(style="text-align:right")  $#{item.tot}
          td(style="text-align:center") 
              button(onclick="location.href = '/check/#{item.id}';") see
  
script.
  //make link with black bg
  $('#nav-pur').addClass('page');
  $('#submenu-all').addClass('page');
