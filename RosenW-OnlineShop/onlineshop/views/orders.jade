doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/navbar.css')
    link(rel='stylesheet', href='/stylesheets/table.css')
    script(type='text/javascript' src="/js/jquery.min.js")
    script(type='text/javascript' src="/js/notify.min.js")
  body
    block content
  include ./navbar.jade

div(onload='showNotific()')
  table(style='width:60%' id='maint')
    tr
      th(width="5%") â„–
      th(width="40%") Products
      th(width="20%") State
      th(width="20%") Date
    each item in data.purchases
        tr
          td(style="text-align:center") #{item.number}
          td
            table(style='width:100%' id='offt')
              tr
                th(style="text-align:center") Product
                th(style="text-align:center") Quantity
                th(style="text-align:center") Price
              each order in item.orderList
                tr
                  td #{order.name}
                  td(style="text-align:center") #{order.quantity}
                  td(align="right") #{order.price}
              tr
                  td
                    strong Total
                  td
                  td(align="right")
                    strong #{item.total}
          td(style="text-align:center") #{item.state}
          td(style="text-align:center") #{item.date}
script.
  //make link with black bg
  $('#nav-orders').addClass('page');

if data.sp
  script.
    $(document).ready(function(){ 
      console.log('qweqweqwss');
        //notify options
        let options = {
          // whether to hide the notification on click
          clickToHide: true,
          // whether to auto-hide the notification
          autoHide: false,
          // if autoHide, hide after milliseconds
          autoHideDelay: 5000,
          // show the arrow pointing at the element
          arrowShow: true,
          // arrow size in pixels
          arrowSize: 5,
          // position defines the notification position though uses the defaults below
          position: 'bottom right',
          // default style
          style: 'bootstrap',
          // default class (string or [string])
          className: 'success',
          // show animation
          showAnimation: 'slideDown',
          // show animation duration
          showDuration: 400,
          // hide animation
          hideAnimation: 'slideUp',
          // hide animation duration
          hideDuration: 200,
          // padding between element and notification
          gap: 0
        }
        $('#navbar').notify('Purchase is successful', options);  
    }) 
    