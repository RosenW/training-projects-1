doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/form.css')
    link(rel='stylesheet', href='/stylesheets/navbar.css')
    script(type='text/javascript' src="/js/jquery.min.js")

  body
    block content
      include ./navbar.jade
      div
        form.form(method='post')
          label Name :
          input#name(type='text', name='name')
          label Price (in $) :
          input#price(type='text', name='price')
          label Quantity :
          input#quantity(type='text', name='quant')
          label Category :
          select(id="ctgries", name="ctg")
            -for(var i = 0;i<data.ctg.length;i++){
            option(value="#{i}") #{data.ctg[i]}
            -}
          textarea#descr(name='descr' placeholder='Enter item description here...')
          input#add(type='submit', name='loginiBtn', value='Add Product')

script.
  //make link with black bg
  $('#nav-addpr').addClass('page');
